<div id="<%= dom_id entry %>", class="flex flex-col p-4 mb-6 shadow-lg bg-slate-100 rounded-lg">
  <strong class="text-blue-700 break-all m-3 font-bold mb-1">
    <%= entry.meal_type %>: <%= entry.category.title if entry.category.present? %>
  </strong>

  <p class="m-3">
    <strong class="font-bold">
      <%= entry.calories %>
    </strong>
    Calories
  </p>

  <p class="m-3">
    <strong class="font-bold">
      <%= entry.protein %>
    </strong>
    gram(s) of protein
  </p>

  <p class="m-3">
    <strong class="font-bold">
      <%= entry.carbohydrates %>
    </strong>
    gram(s) of carbohydrates
  </p>

  <p class="m-3">
    <strong class="font-bold">
      <%= entry.fats %>
    </strong>
    gram(s) of fat
  </p>

  <p class="m-3 italic self-center">
    Logged
    <%= time_ago_in_words(entry.created_at) %>
    ago
  </p>

  <div class="flex justify-evenly items-center">
    <% if action_name != "show" %>
      <%= link_to "View", entry, class: "rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium hover:bg-blue-200" %>
      <%= link_to "Edit", edit_entry_path(entry), class: "rounded-lg py-3 ml-2 px-5 bg-blue-100 inline-block font-medium hover:bg-blue-200" %>
    <% end %>
  </div>
</div>
